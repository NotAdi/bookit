generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String? @unique
  password String?
  createdAt DateTime @default(now())

  // reservations Reservations[]
}

model Hotel {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  address String
  city String?
  state String?
  zip String?
  country String
  phone String?
  description String
  rating Float?
  amenities String[]
  images String[]
}

